// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-s": "workspace::Save",
    },
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space s f": "file_finder::Toggle",
    },
  },
  {
    // normal
    "context": "vim_mode == normal && !menu ",
    "bindings": {
      "space w h": "workspace::ActivatePaneLeft",
      "space w j": "workspace::ActivatePaneDown",
      "space w k": "workspace::ActivatePaneUp",
      "space w l": "workspace::ActivatePaneRight",
      "space w v": "pane::SplitVertical",
      "space w s": "pane::SplitHorizontal",
      "space s f": "file_finder::Toggle",
      "space s g": "pane::DeploySearch",
      "space s c": "theme_selector::Toggle",
      "space s m": "vim::ToggleMarksView",
      "space s l": "vim::ShowLocation",
      "shift-y": ["workspace::SendKeystrokes", "y $"],
      "ctrl-j": "workspace::ToggleBottomDock",
      "ctrl-a": "editor::SelectAll",
      "ctrl-Left": "vim::ResizePaneLeft",
      "ctrl-Right": "vim::ResizePaneRight",
      "ctrl-Up": "vim::Increment",
      "ctrl-Down": "vim::Decrement",
      "g h": "vim::StartOfLine",
      "g l": "vim::EndOfLine",
    },
  },
  {
    // normal & visual (VimControl â†’ normal || visual || operator)
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !menu",
    "bindings": {
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "space m": "vim::Matching",
      "x": ["workspace::SendKeystrokes", "\" _ x"],
      "X": ["workspace::SendKeystrokes", "\" _ X"],
      "space p": ["workspace::SendKeystrokes", "\" 0 p"],
      "space P": ["workspace::SendKeystrokes", "\" 0 P"],
      "s l": "vim::PushSneak",
      "s h": "vim::PushSneakBackward",
    },
  },
  {
    "context": "Editor && vim_mode == visual && !menu",
    "bindings": {
      "ctrl-c": ["workspace::SendKeystrokes", "\" + y"],
      "s a": "vim::PushAddSurrounds",
    },
  },
  {
    "context": "menu || EmptyPane || SharedScreen || (Editor && vim_mode == normal)",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space w h": "workspace::ActivatePaneLeft",
      "space w l": "workspace::ActivatePaneRight",
    },
  },
  {
    "context": "ProjectPanel && !Editor",
    "bindings": {
      "H": [
        "action::Sequence",
        [
          "project_panel::ToggleHideGitIgnore",
          "project_panel::ToggleHideHidden",
        ],
      ],
      "d": "project_panel::Delete",
      "/": "project_panel::NewSearchInDirectory",
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      "r": "project_panel::Rename",
    },
  },
  {
    /* https://zed.dev/docs/vim */
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      // Traditional Vim behavior
      "q": "vim::AnyQuotes",
      "b": "vim::AnyBrackets",

      // mini.ai plugin behavior
      "Q": "vim::MiniQuotes",
      "B": "vim::MiniBrackets",
    },
  },
]
